{
  "rules": {
    "adminData": {
      // Publiczny odczyt tylko dla wybranych danych potrzebnych na stronie
      ".read": true,
      
      // Zapis TYLKO dla zautoryzowanych adminów
      ".write": "auth != null && auth.token.email.matches(/.*@estalara\\.com$/)",
      
      // Walidacja struktury danych
      ".validate": "newData.hasChildren(['lastUpdated'])",
      
      "lastUpdated": {
        ".validate": "newData.isNumber()"
      },
      
      // Sekcje publiczne (tylko odczyt)
